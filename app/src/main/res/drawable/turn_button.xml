<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient

                android:angle="0"
                android:startColor="#3d4554"
                android:endColor="#1c212c"
                android:type="linear"

                />
            <stroke android:width="10dip" android:color="#232833"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient

                android:angle="315"
                android:startColor="#3d4554"
                android:endColor="#1c212c"
                android:type="linear"

                />

        </shape>
    </item>
</selector>